{
  "name": "ai-chat",
  "version": "1.0.0",
  "description": "Local-first AI chatbot powered by node-llama-cpp with a Vue 3 + Vuetify frontend",
  "private": true,
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && node --watch app.js",
    "dev:client": "cd client && npx vite",
    "install:all": "cd server && npm install && cd ../client && npm install",
    "test": "cd server && npm test",
    "test:all": "cd server && npm run test:all",
    "test:e2e": "npx playwright test",
    "clear-model": "cd server && node clear-model.js",
    "clear-downloads": "cd server && node clear-downloads.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boutell/ai-chat.git"
  },
  "keywords": [
    "ai",
    "chat",
    "llm",
    "llama-cpp"
  ],
  "author": "Thomas Boutell (tom@apostrophecms.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/boutell/ai-chat/issues"
  },
  "homepage": "https://github.com/boutell/ai-chat#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^9.1.0"
  }
}
